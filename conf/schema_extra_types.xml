    <fieldType name="map_cnt_var"  class ="solr.StrField" sortMissingLast="true" >
      <analyzer> 
        <!-- MS Office	-->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^[^/]*/.*ms-?(word|odc|access|excel|powerpoint).*$" 
                replacement="MS Office"/>
        <!-- OpenDocument		^application/vnd.*open.*document.* -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^application/vnd.*open.*document.*$" 
                replacement="OpenDocument"/>
        <!-- Plain		^text/plain -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^text/plain.*$" 
                replacement="Plain"/>
        <!-- PDF		^application/pdf -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^application/pdf.*$" 
                replacement="Office"/>
        <!-- HTML			^(text/html|application/xhtml).* -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^[^/]*/x?html.*$" 
                replacement="Web Page"/>
        <!-- InDesign		^application/.*adobe.*indesign.* -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^application/.adobe.*indesign.*$" 
                replacement="InDesign"/>
        <!-- JPEG		^image/jpeg.* -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^image/jpeg.*$" 
                replacement="JPEG"/>
        <!-- PNG		^image/png.* -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^image/png.*$" 
                replacement="PNG"/>
        <!-- TIFF	^image/tiff.* -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^image/tiff.*$" 
                replacement="TIFF"/>
        <!-- GIF		^image/gif.* -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^image/gif.*$" 
                replacement="GIF"/>
        <!-- BMP	^image/.*bmp.* -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^image/.*bmp.*$" 
                replacement="BMP"/>
        <!-- Photoshop		^image/.*photoshop.* -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^image/.*photoshop.*$" 
                replacement="Photoshop"/>
        <!-- MPEG		^.*/mpeg.* -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^^[^/]*/mpeg.*$" 
                replacement="MPEG"/>
        <!-- WMV		^.*/.*wmv.* -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^[^/]*/wmv.*$" 
                replacement="WMV"/>
        <!-- MP4		^.*/mp4.* -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^[^/]*/mp4.*$" 
                replacement="MP4"/>
        <!-- Flash		^application/x-shockwave-flash -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^application/x-shockwave-flash.*$" 
                replacement="Flash"/>
        <!-- File		^application/octet-stream -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^application/octet-stream.*$" 
                replacement="Binary"/>
        <!-- DLL/EXE		^application/.*msdownload.* -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^application/.*msdownload.*$" 
                replacement="DLL/EXE"/>
        <!-- Outlook		^application/.*ms-outlook.*-->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^application/.*ms-outlook.*$" 
                replacement="Outlook"/>
        <!-- Zip	^application/zip.* -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^application/zip.*$" 
                replacement="Zip"/>
        <!-- KML		^application/.*kml.* -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^application/.*kml.*$" 
                replacement="KML"/>
        <!-- XML	^application/xml -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^application/xml.*$" 
                replacement="XML"/>
        <!-- The Remainder -->
        <filter class="solr.PatternReplaceFilterFactory" replace="all" 
                pattern="^[^/]+/.*$" 
                replacement="Other"/>
      </analyzer>
    </fieldType>
</types>
